<html>
    <head>
        <%- include('head.ejs') %>
        <style>
            .table-center th, td{
                text-align:center;
            }
        </style>
    </head>
    <body>
        <%- include('header.ejs') %>
        <div class="wrap">
            <div class="container">
                <div class="page-header">
                    <h1>Board<small></small><span style="float : right;">
                        <button type="button" class="ctm-btn"
                        onclick="location.href='/board/write/'">글 작성하기</button>
                    </span></h1>
                </div>
                <table class="table table-hover table-center">
                    <thead>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>추천수</th>
                        <th>작성일자</th>
                    </thead>
                    <tbody>
                        <% articles.forEach(article => { %>
                            <% if(!article.likes) article.likes = 0; %>
                            <tr onclick="location.href='/board/<%=article.articleId%>'">
                                <td style="text-align:left"><%=article.title %>  <span style="font-size:12px; color:rgb(134, 15, 25);">[<%=article.comments.length%>]</span></td>
                                <td><%=article.nickName %></td>
                                <td><%=article.likes %></td>    
                                <td><%=article.datetime %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</html>