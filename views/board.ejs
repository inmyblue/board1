<html>
    <head>
        <%- include('head.ejs') %>
    </head>
    <body>
        <%- include('header.ejs') %>
        <div class="wrap">
            <div class="container">
                <div class="page-header">
                    <h1>Board<small></small><span style="float : right;">
                        <button type="button" class="btn btn-primary btn-lg"
                        onclick="location.href='/board/write/'">글 작성하기</button>
                    </span></h1>
                </div>
                <table class="table table-hover">
                    <thead>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일자</th>
                    </thead>
                    <tbody>
                        <% articles.forEach(article => { %>
                            <tr onclick="location.href='/board/<%=article.articleId%>'">
                                <td><%=article.title %></td>
                                <td><%=article.nickName %></td>
                                <td><%=article.datetime %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</html>