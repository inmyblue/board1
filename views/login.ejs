<html>
    <head>
        <%- include('head.ejs') %>
        <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">
        <style>
            .bd-placeholder-img {
              font-size: 1.125rem;
              text-anchor: middle;
              -webkit-user-select: none;
              -moz-user-select: none;
              user-select: none;
            }
      
            @media (min-width: 768px) {
              .bd-placeholder-img-lg {
                font-size: 3.5rem;
              }
            }
            .form-floating{
                padding-bottom : 20px;
            }

            .form-control{
                width : 100%;
                height : 5vh;
            }
        </style>
        <link href="./css/signin.css" rel="stylesheet"> 
    </head>
    <body>
        <%- include('header.ejs') %>
        <div class="wrap">
            <div class="container">
                <main class="form-signin">
                    <form>
                      <img class="mb-4" src="img/logo.png" alt="" width="300" height="300">
                      <h1 class="h3 mb-3 fw-normal text-center">로그인</h1>
                      <div class="form-floating">
                        <input type="text" class="form-control" id="userId" placeholder="ID 입력(email)" onkeyup="if(window.event.keyCode==13){login()}" >
                        <label for="userId"></label>
                      </div>
                      <div class="form-floating">
                        <input type="password" class="form-control" id="password" placeholder="Password 입력" onkeyup="if(window.event.keyCode==13){login()}" >
                        <label for="password"></label>
                      </div>

                      <button class="w-100 btn btn-lg btn-primary" type="button"
                      style="width : 100%;" onclick="login()">로그인</button>
                      <p class="mt-5 mb-3 text-muted"
                      style="margin-top:1vh; text-align: center;">아직 아이디가 없으시다구요?</p>
                      <button type="button" class="btn btn-default btn-lg"
                      style="width:100%;" onclick="window.location.href='/user/register/'">회원가입</button>
                    </form>
                  </main>
            </div>
        </div>
    </body>
</html>